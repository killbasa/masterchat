{
	"name": "@killbasa/masterchat",
	"description": "JavaScript library for YouTube Live Chat",
	"version": "1.1.0",
	"author": "killbasa <contact@shaneb.xyz>",
	"scripts": {
		"build": "tsup",
		"check": "tsc",
		"lint": "eslint --ext ts src tests",
		"lint:fix": "eslint --fix --ext ts src tests",
		"format": "prettier --check .",
		"format:fix": "prettier --write --log-level=warn .",
		"test": "vitest run",
		"test:rec": "NOCK_BACK_MODE=record vitest run"
	},
	"type": "commonjs",
	"main": "./dist/masterchat.js",
	"module": "./dist/masterchat.mjs",
	"types": "./dist/masterchat.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/masterchat.d.ts",
				"default": "./dist/masterchat.mjs"
			},
			"require": {
				"types": "./dist/masterchat.d.ts",
				"default": "./dist/masterchat.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"axios": "^1.5.0",
		"debug": "^4.3.2",
		"iterator-helpers-polyfill": "^2.2.8",
		"sha1": "^1.1.1"
	},
	"devDependencies": {
		"@kbotdev/eslint-config": "^1.1.0",
		"@kbotdev/prettier-config": "^1.0.0",
		"@kbotdev/ts-config": "^1.0.0",
		"@microsoft/tsdoc-config": "^0.16.2",
		"@swc/core": "^1.3.82",
		"@types/debug": "^4.1.7",
		"@types/node": "^20.5.9",
		"@types/sha1": "^1.1.3",
		"@vitest/coverage-istanbul": "^0.34.3",
		"dotenv": "^16.3.1",
		"husky": "^8.0.1",
		"nock": "^13.2.4",
		"nock-record": "^0.3.9",
		"prettier": "^3.0.3",
		"ts-jest": "^29.1.1",
		"tslib": "^2.6.2",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.3"
	},
	"homepage": "https://github.com/killbasa/masterchat",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/masterchat.git"
	},
	"bugs": {
		"url": "https://github.com/killbasa/masterchat/issues"
	},
	"license": "Apache-2.0",
	"engines": {
		"node": ">= 20.x"
	}
}
